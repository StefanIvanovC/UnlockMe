@Model UnlockMe.Web.ViewModels.ProfilesInputModels.ProfilesListViewModel
@{
    this.ViewData["Title"] = "All Profiles in UnlockMe";
}

<h1>@this.ViewData["Title"]</h1>
<h2>You can chose from: </h2>  
<hr />
<div class="row">
    @foreach (var profile in this.Model.Profiles)
    {
        <div class="media col-md-3">
            <img class="mr-3" src="@profile.ImageUrl" alt="Generic placeholder image">
            <div class="media-body">
                <h5 class="mt-0"><i class="fas fa-user"></i>@profile.Name</h5>
                  @profile.Description
            </div>
        </div>
    }
</div>
<hr />
<nav aria-label="Page navigation example">
    <ul class="pagination offset-4">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
</nav>
